<odoo>
  <data>


    <record id="custom_view_grid" model="ir.ui.view">
      <field name="name">Custom Grid View</field>
      <field name="model">view</field>
      <field name="arch" type="xml">
        <grid string="My Grid View">
          <!-- Add your columns here -->
        </grid>
      </field>
    </record>

    <record id="custom_view_action" model="ir.actions.act_window">
      <field name="name">custom.actions.act_window</field>
      <field name="res_model">view</field>
      <field name="view_mode">grid,form,kanban,tree</field>
    </record>

    <record id="record_id_view_grid" model="ir.actions.act_window.view">
      <field name="sequence" eval="1"/>
      <field name="view_mode">grid</field>
      <field name="view_id" ref="custom_view_grid"/>
      <field name="act_window_id" ref="custom_view_action"/>
    </record>


